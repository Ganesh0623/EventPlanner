<body>
<div class="custom-container" ng-controller="UserLoginCtrl" >
        <div class="signIn" >
          
                      
                     <div class="signIn-form">
                        <h3>Sign In</h3>
                        <br>
                        <br>
                        
                        <form novalidate method="POST" action="/login" name="loginForm">
      
                          <div class="row">
                            <div class="col-sm-6">
                              <div class="form-group">
                                <label for="email" class="control-label">Email</label>
                                <input type="email" name="email" id="email" placeholder="Email" autofocus class="form-control" required ng-model="login"
                                />
                              </div>
                              <div class="form-group">
                                <label for="password" class="control-label">Password</label>
                                <input type="password" name="password" id="password" placeholder="Password" class="form-control" required ng-model="psw"
                                />
                              </div>
                              <div class="form-group">
                                <button type="submit" class="btn btn-primary" ng-disabled="loginForm.$invalid">
                                  <i class="fa fa-user"></i>Login
                                </button>
      
                              </div>
                            </div>
                            
                          </div>
                        </form>
                        <div >
                        <form action='forgot' method="POST">
                          <button type="submit" name="submit" class="btn btn-danger">Forgot your password?</button>
                        </form>
                        </div>
                        </div>
                      </div>
                      </div>
      </div>
</body>